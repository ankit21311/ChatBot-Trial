# Production Environment Variables Template
# Copy this file to .env and fill in your values

# REQUIRED: Flask Environment
FLASK_ENV=production

# REQUIRED: Secret key for session management (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your-super-secret-key-here-64-characters-minimum

# REQUIRED: Allowed origins for CORS (comma-separated, no spaces)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# OPTIONAL: Model Configuration (defaults to TinyLlama)
GGUF_REPO=TheBloke/TinyLlama-1.1B-Chat-v1.0-GGUF
GGUF_FILE=tinyllama-1.1b-chat-v1.0.Q4_K_M.gguf
N_CTX=2048
N_GPU_LAYERS=0

# OPTIONAL: Flask Debug (NEVER set to True in production)
FLASK_DEBUG=False